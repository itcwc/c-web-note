{
    "manifest_version": 3,
    "name": "__MSG_name__",
    "version": "0.6",
    "description": "__MSG_description__",
    "options_page": "options.html",
    "default_locale": "zh_CN",
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus",
        "scripting",
        "tabs",
        "notifications"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}